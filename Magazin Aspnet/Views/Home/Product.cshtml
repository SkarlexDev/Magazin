@{
    var product = ViewData["Product"] as Product;
}

<div class="container">
  <h1 class="text-center display-4 py-4">@product.ProductName</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <img class="card-img-top" src="@product.ImageURL" data-holder-rendered="true" style="width: 100%;" />
    </div>
    <div class="col-md-3" style="margin: auto 0 auto;">
      <ul class="list-group">
        <li class="list-group-item border-0 bg-warning">
          <h4 class="text-center card-text">@product.Price EUR</h4>
        </li>
        <li class="row flex d-flex align-items-center">
          <div class="col text-center">
            @if (product.Active)
            {
              <a href="@Url.Action("Add", "Cart", new { productId = product.Id })">
                <button type="button" class="btn btn-danger btn-lg" style="width: 100%">Buy</button>
              </a>
            }
            else
            {
              <button type="button" class="btn btn-dark btn-lg disabled" style="width: 100%">Disabled</button>
            }
          </div>
        </li>
      </ul>
    </div>
  </div>
  <div class="row" style="width: 100%;">
    <div class="col-md-12 bg-secondary" style="height: 5px;"></div>
  </div>
  <div class="row justify-content-md-center py-5">
    <div class="col-md-10">
      <h4>Details</h4>
      <div>@Html.Raw(product.Description)</div>
    </div>
  </div>
</div>